{
  "kind": "collectionType",
  "collectionName": "prediction_markets",
  "info": {
    "singularName": "prediction-market",
    "pluralName": "prediction-markets",
    "displayName": "Prediction Market",
    "description": "Prediction markets generated by the news pipeline"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Trending",
        "Politics",
        "Economy",
        "Crypto",
        "Tech",
        "World",
        "Culture",
        "Sports",
        "Education",
        "Business",
        "Environment"
      ],
      "required": true
    },
    "tags": {
      "type": "json",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "open",
        "closed",
        "resolved"
      ],
      "default": "open",
      "required": true
    },
    "endTime": {
      "type": "datetime",
      "required": true
    },
    "resolutionTime": {
      "type": "datetime",
      "required": true
    },
    "result": {
      "type": "boolean"
    },
    "yesCount": {
      "type": "integer",
      "default": 50000,
      "required": true
    },
    "noCount": {
      "type": "integer",
      "default": 50000,
      "required": true
    },
    "totalVolume": {
      "type": "integer",
      "default": 100000,
      "required": true
    },
    "currentYesProbability": {
      "type": "decimal",
      "default": 0.5,
      "required": true
    },
    "currentNoProbability": {
      "type": "decimal",
      "default": 0.5,
      "required": true
    },
    "creatorId": {
      "type": "string",
      "default": "kalshi-generator",
      "required": true
    },
    "resolutionSource": {
      "type": "string",
      "required": true
    },
    "marketId": {
      "type": "string",
      "unique": true,
      "required": true
    }
  }
}
